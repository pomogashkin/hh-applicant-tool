# Telegram bot token (required)
TELEGRAM_BOT_TOKEN=

# HH OAuth application credentials (required)
HH_CLIENT_ID=
HH_CLIENT_SECRET=

# OAuth scope for HH (usually 'applicant')
HH_SCOPE=applicant

# Public base URL for OAuth redirect (required to match HH app settings)
# Example for local dev via ngrok: https://<random>.ngrok-free.app
BOT_PUBLIC_BASE_URL=http://127.0.0.1:54156

# Local HTTP server bind for receiving OAuth callback
BOT_OAUTH_HOST=127.0.0.1
BOT_OAUTH_PORT=54156

# Database URL (SQLite async by default)
BOT_DATABASE_URL=sqlite+aiosqlite:////workspace/hh_bot.db